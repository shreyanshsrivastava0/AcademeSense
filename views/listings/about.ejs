      grid-template-columns: 1fr 1fr;
    }

    .tech-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .gallery {
      grid-template-columns: 1fr;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }
</style>
