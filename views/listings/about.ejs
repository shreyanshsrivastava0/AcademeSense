document.addEventListener('DOMContentLoaded', function() {
  
  // Register GSAP Plugin
  gsap.registerPlugin(ScrollTrigger);

  // Hero Animations
  gsap.from('.hero h1', {
    duration: 1.2,
    y: 100,
    opacity: 0,
    ease: 'power4.out',
    delay: 0.2
  });

  gsap.from('.hero .subtitle', {
    duration: 1,
    y: 50,
    opacity: 0,
    stagger: 0.2,
    ease: 'power3.out',
    delay: 0.5
  });

  gsap.from('.hero-cta > *', {
    duration: 0.8,
    y: 30,
    opacity: 0,
    stagger: 0.2,
    ease: 'power2.out',
    delay: 0.8
  });

  gsap.from('.stat-card', {
    duration: 0.8,
    scale: 0,
    opacity: 0,
    stagger: 0.1,
    ease: 'back.out(1.7)',
    delay: 1
  });

  // Floating animation for hero background
  gsap.to('.hero-bg-animation', {
    scale: 1.1,
    duration: 4,
    repeat: -1,
    yoyo: true,
    ease: 'power1.inOut'
  });

  // Navigation animation
  gsap.from('.nav-header', {
    y: -100,
    opacity: 0,
    duration: 1,
    delay: 0.5,
    ease: 'power3.out'
  });

  // Scroll-triggered animations for sections
  const sections = document.querySelectorAll('#problem, #solution, #mvp, #tech, #roadmap, #demo');
  
  sections.forEach((section) => {
    gsap.from(section, {
      scrollTrigger: {
        trigger: section,
        start: 'top 85%',
        toggleActions: 'play none none none'
      },
      y: 60,
      opacity: 0,
      duration: 1,
      ease: 'power3.out'
    });
  });

  // Content cards animation
  gsap.utils.toArray('.content-card').forEach((card) => {
    gsap.from(card, {
      scrollTrigger: {
        trigger: card,
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      y: 80,
      opacity: 0,
      duration: 1.2,
      ease: 'power3.out'
    });
  });

  // Timeline animations
  gsap.utils.toArray('.timeline-item').forEach((item, index) => {
    gsap.from(item, {
      scrollTrigger: {
        trigger: item,
        start: 'top 85%',
        toggleActions: 'play none none none'
      },
      x: -50,
      opacity: 0,
      duration: 0.8,
      delay: index * 0.2,
      ease: 'power2.out'
    });
  });

  // Tech stack animation
gsap.utils.toArray('.tech-chip').forEach((chip) => {
  gsap.from(chip, {
    scrollTrigger: {
      trigger: chip,
      start: 'top 90%',  // trigger when chip enters view
      toggleActions: 'play none none none'
    },
    y: 50,       // slide up
    scale: 0.5,  // start smaller
    opacity: 0,  // fade in
    duration: 0.8,
    ease: 'back.out(1.7)'
  });
});



  // Gallery animation
  gsap.from('.gallery-item', {
    scrollTrigger: {
      trigger: '.gallery',
      start: 'top 85%',
      toggleActions: 'play none none none'
    },
    y: 40,
    opacity: 0,
    duration: 0.8,
    stagger: 0.1,
    ease: 'power3.out'
  });

  // Stats counter animation
  const stats = document.querySelectorAll('.stat-number');
  stats.forEach(stat => {
    const endValue = stat.textContent;
    stat.textContent = '0';
    
    ScrollTrigger.create({
      trigger: stat,
      start: 'top 80%',
      onEnter: () => {
        if (endValue.includes('%')) {
          gsap.to(stat, {
            textContent: parseInt(endValue),
            duration: 2,
            snap: { textContent: 1 },
            onUpdate: function() {
              stat.textContent = Math.round(this.targets()[0].textContent) + '%';
            }
          });
        } else if (endValue.includes('x')) {
          gsap.to(stat, {
            textContent: parseFloat(endValue),
            duration: 2,
            snap: { textContent: 0.1 },
            onUpdate: function() {
              stat.textContent = this.targets()[0].textContent.toFixed(1) + 'x';
            }
          });
        } else if (endValue.includes('+')) {
          gsap.to(stat, {
            textContent: parseInt(endValue),
            duration: 2,
            snap: { textContent: 1 },
            onUpdate: function() {
              stat.textContent = Math.round(this.targets()[0].textContent) + '+';
            }
          });
        } else if (endValue === '24/7') {
          stat.textContent = '24/7';
        }
      }
    });
  });

  // Smooth scroll for navigation
  document.querySelectorAll('.nav-link').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const targetId = link.getAttribute('href');
      const target = document.querySelector(targetId);
      if (target) {
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });

  // Parallax effect for gradient background
  gsap.to('.gradient-bg', {
    scrollTrigger: {
      trigger: 'body',
      start: 'top top',
      end: 'bottom bottom',
      scrub: 1
    },
    y: '30%',
    ease: 'none'
  });

});
</script>

</body>
</html>