    position: relative;
    overflow: hidden;
  }

  .tech-chip:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--primary);
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
  }

  /* Gallery */
  .gallery-wrapper {
    position: relative;
    margin-top: 30px;
  }

  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 25px;
    padding: 20px 0;
